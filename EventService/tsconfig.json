{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "removeComments": true,
    "pretty": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "target": "es2017",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "alwaysStrict": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}